

<Window x:Class="AgvClientWPF.MsgDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Custom="http://metro.mahapps.com/winfx/xaml/shared"
		ResizeMode="NoResize"	
		ShowInTaskbar="True"
                xmlns:local="clr-namespace:AgvClientWPF"

		WindowStartupLocation="CenterScreen"
        Title="MsgDialog" Height="260" Width="540" Closing="Window_Closing" Loaded="Window_Loaded">


    <Canvas>
        <Image Name="Indicator" Canvas.Left="38" Height="99.986"  Width="99.986" Canvas.Top="57" Source="pack://siteoforigin:,,,/Sources/Loading.gif" />
        <ScrollViewer Canvas.Left="156" Canvas.Top="29" Height="128"  Width="338">
            <TextBlock TextAlignment="Left"  VerticalAlignment="Center" Text="message" FontSize="20" Name="TextBox_Message" TextWrapping="Wrap"  Canvas.Left="167" Canvas.Top="12"></TextBlock>
        </ScrollViewer>
        <Button  Name="Button_yes" Content="确定" Height="37" Canvas.Left="167" Canvas.Top="172" Width="92.746" Style="{DynamicResource ButtonStyle}" Focusable="False" Click="Button_yes_Click"  />
        <Button Name="Button_no" Content="取消" Height="37" Canvas.Left="340" Canvas.Top="172" Width="92.746" Style="{DynamicResource ButtonStyle}" Focusable="False" Click="Button_no_Click"/>

    </Canvas>
</Window>
