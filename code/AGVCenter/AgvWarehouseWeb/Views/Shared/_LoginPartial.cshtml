@using Microsoft.AspNet.Identity
@if (Session["user"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown nav-settings">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
                <ul class="dropdown-menu" style="text-align:left;">
                    @*<li class="nav-requirements">
                            <a href="/Requirements/Index">
                                <i class="glyphicon glyphicon-registration-mark"></i>
                                &nbsp; Requirement
                            </a>
                        </li>*@
                    <li class="nav-mrp-round">
                        <a href="/MrpRounds/Index">
                            <i class="fa fa-history"></i>
                            &emsp;MrpRound
                        </a>
                    </li>
                    <li>
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="glyphicon glyphicon-log-out"></i>&emsp;Logout</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
